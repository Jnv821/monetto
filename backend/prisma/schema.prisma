datasource db {
    provider = "mysql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id Int @default(autoincrement()) @id
    nick String
    email String
    password String
    financialCapital Decimal?
    role Role @default(USER)

    accounts Account[]
}

model Account {
    account_id Int @default(autoincrement()) @id

    owner User? @relation(fields: [userId], references: [id])
    userId Int?
    
    earnings Earning[]
    expenses Expense[]
}

model Earning {
    earning_id Int @default(autoincrement()) @id
    description String?
    date DateTime @default(now())
    value Decimal

    account Account @relation(fields: [accountId], references: [account_id])
    accountId Int
}

model Expense {
    expense_id Int @default(autoincrement()) @id
    description String?
    date DateTime @default(now())
    value Decimal

    account Account @relation(fields: [accountId], references: [account_id])
    accountId Int
}

enum Role {
    USER
    ADMIN
}
